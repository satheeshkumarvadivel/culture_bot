{
    "type": "AdaptiveCard",
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.2",
    "body": [
        {
            "type": "ColumnSet",
            "bleed": true,
            "style": "accent",
            "columns": [
                {
                    "type": "Column",
                    "items": [
                        {
                            "type": "TextBlock",
                            "weight": "Lighter",
                            "text": "Configure Culture Bot",
                            "wrap": true,
                            "color": "Dark",
                            "size": "Large",
                            "fontType": "Default"
                        }
                    ],
                    "width": "stretch"
                }
            ]
        },
        {
            "type": "TextBlock",
            "text": "What would you like me to post in this space?",
            "spacing": "Medium",
            "weight": "Lighter",
            "color": "Accent"
        },
       {
            "type": "Input.ChoiceSet",
            "id":"trait_type",
            "isRequired": true,
            "errorMessage": "This is a required input",
            "isMultiSelect": false,
            "style": "expanded",
            "choices": [
                {
                    "title": "Good Team Member Traits",
                    "value": "good_traits",
                    "type":"Input.Choice"
                },
                {
                    "title": "Bad Team Member Traits",
                    "value": "bad_traits",
                    "type":"Input.Choice"
                },
                {
                    "title": "Both",
                    "value": "all_traits"
                }
            ],
            "placeholder": "Choose what traits to post"
        },
        {
            "type": "TextBlock",
            "text": "How frequent do you want me to post?",
            "spacing": "Medium",
            "weight": "Lighter",
            "color": "Accent"
        },
        {
            "type": "Input.ChoiceSet",
            "id":"frequency",
            "isRequired": true,
            "errorMessage": "This is a required input",
            "isMultiSelect": false,
            "style": "expanded",
            "choices": [
                {
                    "title": "Daily",
                    "value": "daily"
                },
                {
                    "title": "Weekly",
                    "value": "weekly",
                    "type":"Input.Choice"
                }
            ],
            "placeholder": "Choose how frequent to post"
        }
    ],
    "actions": [        
        {
            "type": "Action.Submit",
            "title": "Submit",
            "data": {}
        }
    ]
}