{
    "type": "AdaptiveCard",
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.3",
    "body": [
        {
            "type": "ColumnSet",
            "bleed": true,
            "style": "accent",
            "columns": [
                {
                    "type": "Column",
                    "items": [
                        {
                            "type": "TextBlock",
                            "weight": "Lighter",
                            "text": "Configure Culture Bot",
                            "wrap": true,
                            "color": "Dark",
                            "size": "Large",
                            "fontType": "Default"
                        }
                    ],
                    "width": "stretch"
                }
            ]
        },
        {
            "type": "TextBlock",
            "text": "What would you like me to post in this space?",
            "spacing": "Medium",
            "weight": "Lighter",
            "color": "Accent"
        },
       {
            "type": "Input.ChoiceSet",
            "id":"trait_type",
            "isRequired": true,
            "errorMessage": "This is a required input",
            "isMultiSelect": false,
            "style": "expanded",
            "choices": [
                {
                    "title": "Good Team Member Traits",
                    "value": "good_traits",
                    "type":"Input.Choice"
                },
                {
                    "title": "Bad Team Member Traits",
                    "value": "bad_traits",
                    "type":"Input.Choice"
                },
                {
                    "title": "Both",
                    "value": "all_traits"
                }
            ],
            "placeholder": "Choose what traits to post"
        },
        {
            "type": "TextBlock",
            "text": "How frequent do you want me to post?",
            "spacing": "Medium",
            "weight": "Lighter",
            "color": "Accent"
        },
        {
            "type": "Input.ChoiceSet",
            "id":"frequency",
            "choices": [
                {
                    "title": "All Weekdays",
                    "value": "8"
                },
                {
                    "title": "Every Monday",
                    "value": "1"
                },
                {
                    "title": "Every Tuesday",
                    "value": "2"
                },
                {
                    "title": "Every Wednesday",
                    "value": "3"
                },
                {
                    "title": "Every Thursday",
                    "value": "4"
                },
                {
                    "title": "Every Friday",
                    "value": "5"
                }
            ],
            "placeholder": "All Weekdays",
            "value": "weekdays"
        },
        {
            "type": "TextBlock",
            "text": "At what time do you want me to post?",
            "spacing": "Medium",
            "weight": "Lighter",
            "color": "Accent"
        },
        {
            "type": "Input.Time",
            "id":"time",
            "isRequired": true,
            "errorMessage": "This is a required input",
            "value": "09:00"
        },
        {
            "type": "Input.ChoiceSet",
            "id":"timezone",
            "choices": [
                {
                    "title": "Asia/Kolkata",
                    "value": "Asia/Kolkata"
                },
                {
                    "title": "America/New_York",
                    "value": "America/New_York"
                }
            ],
            "placeholder": "Asia/Kolkata",
            "value": "Asia/Kolkata"
        }
    ],
    "actions": [        
        {
            "type": "Action.Submit",
            "title": "Submit",
            "data": {}
        }
    ]
}